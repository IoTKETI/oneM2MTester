module selectCase {

type record of integer RoI;

type record Rec {
  RoI numz
}

type record EmptyRec { }

type record Rec2 {
  EmptyRec empty
}

function f_embeddedEmptyArray() {
  var Rec r := { numz := { 1, 2 } };

  select (r) {
    // this condition used to crash the compiler during code generation (artf521346)
    case ( { numz := { } } ) {
      action("empty");
    }
    case else {
      action("not empty");
    }
  }
}

function f_emptyArray() {
  var RoI a := { 1, 2 };

  select (a) {
    case ( { } ) {
      action("empty");
    }
    case else {
      action("not empty");
    }
  }
}

function f_emptyRecord() {
  var EmptyRec er := { };

  select (er) {
    case ( { } ) {
      action("empty");
    }
    case else {
      action("not empty");
    }
  }
}

function f_embeddedEmptyRecord() {
  var Rec2 r2 := { empty := { } };

  select (r2) {
    case ( { empty := { } } ) {
      action("empty");
    }
    case else {
      action("not empty");
    }
  }
}

function f_with_goto() {
  var boolean v_result;
  var charstring pl_messageType := "s";
  v_result := true;
  if (not v_result) { goto END_EXECUTION };

  select (pl_messageType) {
    case ("SAR")  {
       v_result := false;
     }
  }
  label END_EXECUTION;
  log(v_result);
}

function f_with_goto_int() {
  var integer v_result;
  var charstring pl_messageType := "s";
  v_result := 3;
  if (v_result == 2) { goto END_EXECUTION };

  select (v_result) {
    case (4)  {
       v_result := 3;
     }
  }
  label END_EXECUTION;
  log(v_result);
}

}
